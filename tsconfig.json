{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "typeRoots": ["./src/types", "./node_modules/@types"],
  "include": ["src/**/*", "src/types" ],
  "exclude": ["node_modules", "dist"]
}
